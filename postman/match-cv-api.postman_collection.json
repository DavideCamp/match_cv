{
  "info": {
    "name": "match-cv API",
    "description": "Postman collection for CV upload and search run endpoints.",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "_postman_id": "f4f9b580-32f2-4f06-9fcf-c9f0819f255f"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:8000"
    },
    {
      "key": "run_id",
      "value": "11111111-1111-1111-1111-111111111111"
    }
  ],
  "item": [
    {
      "name": "Upload CV Document",
      "request": {
        "method": "POST",
        "header": [],
        "body": {
          "mode": "formdata",
          "formdata": [
            {
              "key": "candidate_name",
              "value": "John Doe",
              "type": "text"
            },
            {
              "key": "email",
              "value": "john.doe@example.com",
              "type": "text"
            },
            {
              "key": "source_file",
              "type": "file",
              "src": ""
            }
          ]
        },
        "url": {
          "raw": "{{baseUrl}}/api/cv-documents/",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "api",
            "cv-documents",
            ""
          ]
        },
        "description": "Creates a CVDocument record and triggers injection."
      },
      "response": []
    },
    {
      "name": "Create Search Run",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"job_title\": \"Backend Engineer\",\n  \"job_offer_text\": \"Looking for Python and Django experience\",\n  \"requirements\": {\n    \"must_have\": [\"Python\", \"Django\"]\n  },\n  \"run_config\": {\n    \"top_k\": 10\n  }\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/search-runs/",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "api",
            "search-runs",
            ""
          ]
        },
        "description": "Currently returns 501 until search run creation is implemented."
      },
      "response": []
    },
    {
      "name": "Get Search Run Events",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/api/search-runs/{{run_id}}/events/",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "api",
            "search-runs",
            "{{run_id}}",
            "events",
            ""
          ]
        },
        "description": "Currently returns 501 until event polling is implemented."
      },
      "response": []
    },
    {
      "name": "Get Search Run Results",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/api/search-runs/{{run_id}}/results/",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "api",
            "search-runs",
            "{{run_id}}",
            "results",
            ""
          ]
        },
        "description": "Currently returns 501 until results retrieval is implemented."
      },
      "response": []
    }
  ]
}
